{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-autumn",
            "map-init",
            "map-preload-2D",
            "toolset",
            "banner",
            "legend",
            "basemaptoggler",
            "mapnavigation",
            "popups-default",
            "dn_editingusernameprocessor"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_editingusernameprocessor": {
            "Config": {
                "creatorField": "",
                "usernameField": "kommentar",
                "usernameAttributes": [
                    "givenname",
                    "sn"
                ]
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "basemaptoggler": {
            "Config": {
                "itemStyles": {
                    "esri_street": "icon-thumbnail",
                    "esri_hybrid": "icon-thumbnail",
                    "esri_topo": "icon-thumbnail"
                }
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_street",
                        "title": "Straßenkarte (grau)",
                        "thumbnailUrl": "resource('${app}:/images/streets.png')",
                        "selected": true,
                        "basemap": "gray-vector"
                    },
                    {
                        "id": "esri_hybrid",
                        "title": "Luftbild (hybrid)",
                        "thumbnailUrl": "resource('${app}:/images/hybrid.png')",
                        "basemap": "hybrid"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "editing",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/mapapps/stoerung/FeatureServer/0",
                            "formTemplate": {
                                "title": "Bürger melden Störungen",
                                "description": "Helfen Sie dabei, unsere Stadt schön zu halten!",
                                "elements": [
                                    {
                                        "type": "group",
                                        "label": "Art der Störung",
                                        "description": "Im ersten Schritt, geben Sie bitte die Art der Störung ein.",
                                        "elements": [
                                            {
                                                "type": "field",
                                                "fieldName": "art",
                                                "label": "Was möchten Sie melden?"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "group",
                                        "label": "Details zur Erfassung",
                                        "description": "Geben Sie in diesem Schritt optional weitere Informationen ein.",
                                        "elements": [
                                            {
                                                "type": "field",
                                                "fieldName": "details",
                                                "label": "Details zur Meldung"
                                            },
                                            {
                                                "type": "field",
                                                "fieldName": "zeitpunkt",
                                                "label": "Zeitpunkt der Meldung"
                                            },
                                            {
                                                "type": "field",
                                                "fieldName": "kommentar",
                                                "editable": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    ],
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "center": {
                        "x": 774853,
                        "y": 6610677,
                        "spatialReference": 3857
                    },
                    "scale": 140000
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "widgets": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "sharelink",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "legend",
                                "sublayout": [
                                    "mobile_portrait",
                                    "mobile_landscape"
                                ],
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool",
                            "editingToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "editingToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        }
    }
}
